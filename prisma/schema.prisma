generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @default(autoincrement()) @id
  email String @unique
  password String
  products Product[]
  transactions Transaction[]
}
model Category {
  id Int @default(autoincrement()) @id
  name String
  products CategoryWiseProduct[]
}
model Product {
  id Int @default(autoincrement()) @id
  description String
  user User @relation(fields: [userId], references: [id])
  userId Int @unique
  categories CategoryWiseProduct[]
  transactions Transaction[]
}

model CategoryWiseProduct {
  product Product @relation(fields: [productId], references: [id])
  productId Int
  category Category @relation(fields: [categoryId], references: [id])
  categoryId Int

  @@id([categoryId, productId])
}

model Transaction {
  id Int @default(autoincrement()) @id
  type String
  //product id
  product Product @relation(fields: [productId], references: [id])
  productId Int
  //user id
  user User @relation(fields: [userId], references: [id])
  userId Int
}
 